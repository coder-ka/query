generator query {
    provider = "prisma-query"
    output   = "./schema.ts"
}

datasource db {
    provider = "mysql"
    url      = env("DATABASE_URL")
}

model User {
    id          String   @id
    first_name  String
    last_name   String
    age         Int
    todos       Todo[]
    modified_at DateTime
}

model Todo {
    id          String   @id
    title       String
    author_id   String
    author      User     @relation(fields: [author_id], references: [id])
    modified_at DateTime
}
