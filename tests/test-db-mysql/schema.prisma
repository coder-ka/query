generator query {
    provider = "prisma-query"
    output   = "../schema.ts"
    mode     = "query-module-test"
}

datasource db {
    provider = "mysql"
    url      = env("DATABASE_URL_MYSQL")
}

model accounts {
    id          String   @id
    first_name  String
    last_name   String
    age         Int
    todos       todos[]
    modified_at DateTime
}

model todos {
    id          String   @id
    title       String
    author_id   String
    author      accounts @relation(fields: [author_id], references: [id])
    modified_at DateTime
}
